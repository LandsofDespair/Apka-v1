<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.daniel.scrolltest3.StartupMenu">


        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal"
            android:onClick="logoClicked"
            android:clickable="true"
            android:background="@drawable/logowhite"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_above="@+id/napis"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp">

        </FrameLayout>

    <FrameLayout
        android:id="@+id/napis"
        android:layout_width="305dp"
        android:layout_height="85dp"
        android:clickable="true"
        android:onClick="napisClicked"
        android:background="@drawable/landsofdespair"
        tools:layout_editor_absoluteY="381dp"
        tools:layout_editor_absoluteX="40dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <requestFocus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>
